<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail_task"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.ilungj.villig.DetailedTaskActivity">

    <RelativeLayout
        android:transitionName="holder"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/detailed_task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BBQ Fundraiser for Maria"
            android:gravity=""
            android:textSize="18dp"
            android:fontFamily="sans-serif-light"
            android:textStyle="bold"
            android:textColor="@color/blackish"
            android:layout_toEndOf="@+id/detailed_task_avatar" />

        <TextView
            android:id="@+id/detailed_task_creator"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity=""
            android:text="Annie Kim"
            android:layout_below="@+id/detailed_task_time"
            android:layout_toEndOf="@+id/detailed_task_avatar"/>

        <TextView
            android:id="@+id/detailed_task_time"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Posted January 21, 2017 5:43 pm "
            android:layout_below="@+id/detailed_task_title"
            android:layout_toEndOf="@+id/detailed_task_avatar" />

        <ImageView
            android:id="@+id/detailed_task_avatar"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginEnd="16dp"
            android:src="@mipmap/avatar_one" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_container"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/detailed_task_description"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/detailed_task_volunteer"
            android:layout_height="50dp"
            android:layout_width="150dp"
            android:text="Volunteer"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/detailed_task_gift"
            android:layout_height="50dp"
            android:layout_width="150dp"
            android:text="Gift"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/white"
            />

    </RelativeLayout>

</LinearLayout>
