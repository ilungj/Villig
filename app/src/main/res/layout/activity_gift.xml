<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/activity_donate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ilungj.villig.GiftActivity">

    <TextView
        android:id="@+id/gift_title"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:text="Gift"
        android:gravity=""
        android:fontFamily="sans-serif-light"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="@color/blackish"/>


    <Button
        android:id="@+id/gift_payment_button"
        android:background="@color/colorPrimary"
        android:text="Add Payment"
        android:textColor="@color/white"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_below="@+id/gift_title"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/gift_payment_text"
        android:layout_height="50dp"
        android:layout_width="wrap_content"
        android:hint="Payment"
        android:gravity="center"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/gift_amount_text"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Amount"
        android:inputType="number"
        android:layout_below="@+id/gift_payment_text"
        android:gravity="center" />

    <EditText
        android:id="@+id/gift_amount"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_below="@id/gift_payment_button"
        android:layout_alignParentRight="true"
        android:hint="$1, $5, $10 ..."/>

    <Button
        android:id="@+id/gift_button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Done"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@+id/gift_amount_text"
        android:textColor="@color/white"/>


</RelativeLayout>